<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateAccountActivity">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/videocolor"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/videoView"
        app:shapeAppearance="@style/TopOnlyRoundedCard">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Create Account"
                    android:textColor="@color/nuetral_bold_color"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Contact Name"
                    android:textColor="@color/nuetral_bold_color"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/userNameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="First Name"
                    android:inputType="textPersonName"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/textUserLastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Last Name"
                    android:textColor="@color/nuetral_bold_color"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/userNameLastEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="Last Name"
                    android:inputType="textPersonName"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/textEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Email"
                    android:textColor="@color/nuetral_bold_color"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/emailEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="Email Address"
                    android:inputType="textPersonName"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/textPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Password"
                    android:textColor="@color/nuetral_bold_color"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/passwordEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background"
                    android:drawableEnd="@drawable/lock"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="Secure Password"
                    android:inputType="textPassword"
                    android:padding="6dp" />

                <!-- Rule 1 -->
                <LinearLayout
                    android:id="@+id/rule_length"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_length"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/uncheckcircle" />

                    <TextView
                        android:id="@+id/text_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Between 8 and 30 characters"
                        android:textColor="@color/gray"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Rule 2 -->
                <LinearLayout
                    android:id="@+id/rule_number_special"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_number_special"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/uncheckcircle" />

                    <TextView
                        android:id="@+id/text_number_special"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Include a number (1234) and one special character (#%!.^)"
                        android:textColor="@color/gray"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Rule 3 -->
                <LinearLayout
                    android:id="@+id/rule_upper_lower"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_upper_lower"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/uncheckcircle" />

                    <TextView
                        android:id="@+id/text_upper_lower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Uppercase (ABC) and lowercase (abc) letters"
                        android:textColor="@color/gray"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Rule 4 -->
                <LinearLayout
                    android:id="@+id/rule_no_spaces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_no_spaces"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/uncheckcircle" />

                    <TextView
                        android:id="@+id/text_no_spaces"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="No blank spaces"
                        android:textColor="@color/gray"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Rule 5 -->
                <LinearLayout
                    android:id="@+id/rule_no_email_parts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_no_email_parts"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/uncheckcircle" />

                    <TextView
                        android:id="@+id/text_no_email_parts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="It cannot contain parts of your email address"
                        android:textColor="@color/gray"
                        android:textSize="14sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/signInButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_rounded"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Create Account" />

                <TextView
                    android:id="@+id/alreadyHaveAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/already_have_an_account"
                    android:textSize="12dp" />


            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>