<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_mint_green"
    tools:context=".bookingActivities.BookingDetailStep1Activity">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/forYouDestConst"
      android:layout_width="match_parent"
      android:layout_height="55dp"
      android:background="@color/soft_mint_green"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:src="@drawable/ic_backicon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="@color/dark_cyan" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/roboto_light"
        android:text="Booking details"
        android:textColor="@color/dark_cyan"
        android:textFontWeight="500"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <FrameLayout
        android:id="@+id/notificationLayout"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/menuIcon"
        app:layout_constraintTop_toTopOf="parent">

      <ImageView
          android:id="@+id/notificationIcon"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_gravity="center"
          android:src="@drawable/notification"
          app:tint="@color/dark_black" />

      <TextView
          android:id="@+id/notificationBadge"
          android:layout_width="18dp"
          android:layout_height="18dp"
          android:layout_gravity="top|end"
          android:background="@drawable/badge_background"
          android:gravity="center"
          android:text="0"
          android:textColor="@android:color/white"
          android:textSize="12sp" />
    </FrameLayout>

    <ImageView
        android:id="@+id/menuIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/optional_dot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/dark_black" />

  </androidx.constraintlayout.widget.ConstraintLayout>


  <LinearLayout
      android:id="@+id/selectLayoutCons"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:background="@color/white"
      android:orientation="horizontal"
      android:padding="16dp"
      app:layout_constraintTop_toBottomOf="@+id/forYouDestConst">


      <TextView
          android:id="@+id/step1"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:gravity="center"
          android:text="1"
          android:textColor="@android:color/white"
          android:background="@drawable/circle_active"/>

    <View
        android:id="@+id/line1"
        android:layout_width="40dp"
        android:layout_height="2dp"
        android:background="@color/line_inactive"/>


      <TextView
          android:id="@+id/step2"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:gravity="center"
          android:text="2"
          android:textColor="@android:color/darker_gray"
          android:background="@drawable/circle_inactive"/>

    <View
        android:id="@+id/line2"
        android:layout_width="40dp"
        android:layout_height="2dp"
        android:background="@color/line_inactive"/>

    <TextView
        android:id="@+id/step3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="3"
        android:textColor="@android:color/darker_gray"
        android:background="@drawable/circle_inactive"/>

    <View
        android:id="@+id/line3"
        android:layout_width="40dp"
        android:layout_height="2dp"
        android:background="@color/line_inactive"/>

    <TextView
        android:id="@+id/step4"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="4"
        android:textColor="@android:color/darker_gray"
        android:background="@drawable/circle_inactive"/>

    <View
        android:id="@+id/line4"
        android:layout_width="40dp"
        android:layout_height="2dp"
        android:background="@color/line_inactive"/>

    <TextView
        android:id="@+id/step5"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="5"
        android:textColor="@android:color/darker_gray"
        android:background="@drawable/circle_inactive"/>

  </LinearLayout>

  <FrameLayout
      android:id="@+id/tripFrameLayout"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:background="@color/white"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/selectLayoutCons"
      app:layout_constraintVertical_bias="1.0" >

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

  </FrameLayout>

  <Button
      android:id="@+id/nextButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="Next"
      android:background="@drawable/button_rounded"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>