<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/itemImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/birds"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:shapeAppearanceOverlay="@style/RoundedImageStyle" />

        <ImageView
            android:id="@+id/deleteIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_round_red"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_delete"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/itemTitle"
            app:tint="@android:color/white"
             />



        <!-- Title -->
        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Birders Haven"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@id/itemImage"
            app:layout_constraintTop_toTopOf="@id/itemImage"
            app:layout_constraintEnd_toStartOf="@id/favIcon"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginStart="8dp"/>

        <!-- Favourite Icon -->
        <ImageView
            android:id="@+id/favIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top|end"
            android:padding="6dp"
            android:src="@drawable/wishlist_color"
            app:layout_constraintTop_toTopOf="@id/itemTitle"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Rating + Count -->
        <LinearLayout
            android:id="@+id/ratingLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/itemTitle"
            app:layout_constraintTop_toBottomOf="@id/itemTitle"
            android:layout_marginTop="4dp">

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="3"
                android:rating="3"
                android:stepSize="1"
                android:isIndicator="true"
                android:scaleX="0.7"
                android:scaleY="0.7"
                style="?android:attr/ratingBarStyleSmall"
                app:layout_constraintStart_toStartOf="@id/itemTitle"
                app:layout_constraintTop_toBottomOf="@id/itemTitle"
                android:layout_marginTop="4dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(120)"
                android:textSize="14sp"
                android:textColor="@android:color/holo_green_light"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Price -->
        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R120.00"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
