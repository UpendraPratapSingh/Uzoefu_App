<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="6dp">

    <TextView
        android:id="@+id/tvDayName"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_day_grey"
        android:gravity="center"
        android:text="Mon"
        android:textColor="@color/nuetral_bold_color"
        android:textSize="14sp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etStartTime"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/bg_time_box"
        android:focusable="false"
        android:gravity="center"
        android:hint="--:--am"
        android:inputType="none"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvDayName"/>

    <ImageView
        android:id="@+id/subBtn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginHorizontal="6dp"
        android:src="@drawable/baseline_remove"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/etStartTime"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
        android:id="@+id/etEndTime"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_time_box"
        android:focusable="false"
        android:gravity="center"
        android:hint="--:--pm"
        android:inputType="none"
        android:textSize="14sp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/subBtn"/>

    <ImageView
        android:id="@+id/btnAdd"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/pluscircle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etEndTime"
        app:tint="@color/green_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
