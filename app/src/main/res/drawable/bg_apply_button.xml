<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/gradiant_transparent" /> <!-- Darker blue when pressed -->
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/green_color" /> <!-- Primary blue -->
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>
