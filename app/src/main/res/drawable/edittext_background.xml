<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@android:color/white" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="@color/dark_black" />

    <!-- Corner radius -->
    <corners android:radius="8dp" />

    <!-- Padding inside -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
